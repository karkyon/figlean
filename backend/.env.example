# =====================================
# Stepple Backend Environment Variables
# AI駆動型 目標達成プラットフォーム - 開発環境
# =====================================
# このファイルをコピーして .env を作成してください
# cp .env.example .env

# 環境設定
NODE_ENV=development

# サーバー設定
PORT=3001
HOST=localhost

# データベース設定
# ローカル開発用PostgreSQL接続文字列
# フォーマット: postgresql://ユーザー名:パスワード@ホスト:ポート/データベース名?schema=スキーマ名
DATABASE_URL=postgresql://stepple_dev:your_password@localhost:5432/stepple_dev?schema=public

# JWT設定
# 本番環境では必ず強力なランダム文字列に変更すること
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# CORS設定
# カンマ区切りで複数のオリジンを指定可能
CORS_ORIGIN=http://localhost:3000

# API設定
API_VERSION=v1
BASE_URL=http://localhost:3001

# ファイルアップロード（将来の機能用）
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# メール設定（開発環境用・将来の機能）
# Gmail使用時はアプリパスワードを設定
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@stepple.app

# ログレベル
# オプション: error, warn, info, debug
LOG_LEVEL=info

# セッション設定
SESSION_SECRET=your-session-secret-change-in-production

# デバッグモード
DEBUG=false

# フロントエンド設定
FRONTEND_URL=http://localhost:3000

# AI API設定
# Hugging Face API（MVP Phase）
# 取得方法: https://huggingface.co/settings/tokens
HF_API_KEY=your-huggingface-api-key
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# OpenAI API（将来の拡張用）
# 取得方法: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Claude API（将来の拡張用）
# 取得方法: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Swagger設定（開発環境）
SWAGGER_HOST=localhost
SWAGGER_PORT=3001
SWAGGER_PROTOCOL=http
